<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="ProjetoEventos.Views.CadastroEventoPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:sys="clr-namespace:System;assembly=mscorlib"
    BackgroundColor="#121212"
    Shell.NavBarIsVisible="False">


    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="7">

            <!-- TÍTULO -->
            <Label Text="Cadastro de Eventos"
                   FontSize="30"
                   FontAttributes="Bold"
                   TextColor="#9966FF"
                   HorizontalTextAlignment="Center" />

            <!-- SUBBOX: NOME DO EVENTO -->
            <Frame BackgroundColor="#121212"
                   BorderColor="#1E1E1E"
                   CornerRadius="20"
                   Padding="20">

                <VerticalStackLayout Spacing="10">
                    <Label Text="INFORMAÇÕES GERAIS"
                           TextColor="#9966FF"
                           FontAttributes="Bold"
                           FontSize="18"
                           HorizontalTextAlignment="Center" />
                    <Label Text="Nome do Evento:"
                           FontSize="16"
                           TextColor="#CCCCCC" />

                    <Entry Placeholder="Digite o nome"
                           Text="{Binding Evento.NomeEvento}" />

                    <Label Text="Local do Evento:"
                           FontSize="16"
                           TextColor="#CCCCCC" />

                    <Entry Placeholder="Digite o local"
                           Text="{Binding Evento.LocalEvento}" />
                </VerticalStackLayout>
            </Frame>

            <!-- SUBBOX: DATAS -->
            <Frame BackgroundColor="#121212"
                   BorderColor="#1E1E1E"
                   CornerRadius="20"
                   Padding="20">

                <VerticalStackLayout Spacing="10">

                    <Label Text="PERÍODO DO EVENTO"
                           TextColor="#9966FF"
                           FontAttributes="Bold"
                           FontSize="18"
                           HorizontalTextAlignment="Center" />

                    <HorizontalStackLayout Spacing="20">

                        <VerticalStackLayout Spacing="5">
                            <Label Text="Início:" TextColor="#CCCCCC"/>
                            <DatePicker 
                                Format="dd/MM/yyyy"
                                TextColor="White"
                                MinimumDate="{x:Static sys:DateTime.Now}"
                                Date="{Binding Evento.DataInicio}" />
                        </VerticalStackLayout>

                        <VerticalStackLayout Spacing="5">
                            <Label Text="Fim:" TextColor="#CCCCCC"/>
                            <DatePicker 
                                Format="dd/MM/yyyy"
                                TextColor="White"
                                MinimumDate="{x:Static sys:DateTime.Now}"
                                Date="{Binding Evento.DataFim}" />
                        </VerticalStackLayout>

                    </HorizontalStackLayout>

                </VerticalStackLayout>

            </Frame>

            <!-- SUBBOX: PARTICIPANTES -->
            <Frame BackgroundColor="#121212"
                   BorderColor="#1E1E1E"
                   CornerRadius="20"
                   Padding="20">

                <VerticalStackLayout Spacing="15">

                    <Label Text="PARTICIPANTES"
                           TextColor="#9966FF"
                           FontAttributes="Bold"
                           FontSize="18"
                           HorizontalTextAlignment="Center" />

                    <Grid RowDefinitions="Auto, Auto"
                          ColumnDefinitions="*,*,*"
                          Padding="0"
                          ColumnSpacing="10">

                        <!-- Nome do campo -->
                        <Label Text="Quantidade:"
                               Grid.Column="0"
                               VerticalTextAlignment="Center"
                               TextColor="#CCCCCC"/>

                        <!-- Valor -->
                        <Label Text="{Binding Evento.NumeroParticipantes}" 
                               Grid.Column="1"
                               HorizontalOptions="Center"
                               VerticalTextAlignment="Center"
                               FontSize="18"
                               TextColor="White" />

                        <!-- Stepper -->
                        <Stepper Grid.Column="2"
                                 Minimum="1"
                                 Maximum="500"
                                 Increment="1"
                                 Value="{Binding NumeroParticipantes}"
                                 HorizontalOptions="End" />

                    </Grid>

                    <VerticalStackLayout Spacing="10">

                        <Label Text="Preço por Participante:"
                           FontSize="16"
                           TextColor="#CCCCCC" />

                        <Entry Placeholder="R$"
                           Keyboard="Numeric"
                           Text="{Binding CustoTexto}" />

                    </VerticalStackLayout>
                    
                </VerticalStackLayout>

            </Frame>

            <!-- BOTÃO CADASTRAR -->
            <Button Text="Cadastrar"
                    FontSize="18"
                    BackgroundColor="#6633CC"
                    TextColor="White"
                    CornerRadius="15"
                    HeightRequest="55"
                    FontAttributes="Bold"
                    Command="{Binding CadastrarCommand}" />
                    

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
